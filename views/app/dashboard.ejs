        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('active');
        });

        // Make toggle switches work even though the cards are links
        document.querySelectorAll('.switch').forEach(switchElem => {
            switchElem.addEventListener('click', function (e) {
                e.stopPropagation();
            });
        });

        // Prevent default link behavior when clicking on toggle switches
        document.querySelectorAll('.toggle-item').forEach(item => {
            item.addEventListener('click', function (e) {
                e.stopPropagation();
            });
        });

        // Toggle switch functionality
        document.querySelectorAll('.switch input').forEach(toggle => {
            toggle.addEventListener('change', function (e) {
                e.stopPropagation();
                const featureName = this.parentElement.previousElementSibling.querySelector('span').textContent;
                console.log(`${featureName} is now ${this.checked ? 'enabled' : 'disabled'}`);

                // Here you would typically update user preferences via an API
            });
        });

        // For demo: When "View All" buttons are clicked
        document.querySelectorAll('.view-all-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.stopPropagation(); // Don't trigger the parent card's link
                const cardType = this.closest('.dashboard-card').querySelector('.card-title span').textContent;
                console.log(`View all clicked for: ${cardType}`);

                // Manually navigate to the appropriate page
                const href = this.closest('.dashboard-card').getAttribute('href');
                window.location.href = href;
            });
        });
    </script>
